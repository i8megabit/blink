# üê≥ –ë–ê–ó–û–í–´–ô –û–ë–†–ê–ó - –£–ú–ù–û–ï –ö–ï–®–ò–†–û–í–ê–ù–ò–ï
FROM python:3.11-slim AS base

# –ê—Ä–≥—É–º–µ–Ω—Ç—ã —Å–±–æ—Ä–∫–∏
ARG SERVICE_NAME
ARG SERVICE_PORT=8000
ARG BUILDKIT_INLINE_CACHE=1

# –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ
LABEL maintainer="reLink Team <i8megabit@gmail.com>" \
      description="Base image for all reLink microservices" \
      version="1.0.0" \
      architecture="universal" \
      service="${SERVICE_NAME}"

# Python –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏ (—Å—Ç–∞–±–∏–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏)
ENV PYTHONUNBUFFERED=1
ENV PYTHONOPTIMIZE=2
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app
ENV SERVICE_NAME=${SERVICE_NAME}
ENV SERVICE_PORT=${SERVICE_PORT}

# –°–æ–∑–¥–∞–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è (—Å—Ç–∞–±–∏–ª—å–Ω—ã–π —Å–ª–æ–π)
RUN groupadd -r appuser && useradd -r -g appuser appuser

# –†–∞–±–æ—á–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è
WORKDIR /app

# –°–ò–°–¢–ï–ú–ù–´–ï –ó–ê–í–ò–°–ò–ú–û–°–¢–ò (—Å—Ç–∞–±–∏–ª—å–Ω—ã–π —Å–ª–æ–π - –∫–µ—à–∏—Ä—É–µ—Ç—Å—è)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# –û–ë–ù–û–í–õ–ï–ù–ò–ï PIP (—Å—Ç–∞–±–∏–ª—å–Ω—ã–π —Å–ª–æ–π - –∫–µ—à–∏—Ä—É–µ—Ç—Å—è)
RUN pip install --no-cache-dir --upgrade pip

# –ë–ê–ó–û–í–´–ï PYTHON –ü–ê–ö–ï–¢–´ (—Å—Ç–∞–±–∏–ª—å–Ω—ã–π —Å–ª–æ–π - –∫–µ—à–∏—Ä—É–µ—Ç—Å—è)
COPY requirements-base.txt .
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    pydantic==2.5.0 \
    pydantic-settings==2.1.0 \
    python-dotenv==1.0.0 \
    pytz==2023.3 \
    click==8.1.7 \
    rich==13.7.0 \
    psutil==5.9.6

# –ë–£–¢–°–¢–†–ê–ü –ö–û–î (—Å—Ç–∞–±–∏–ª—å–Ω—ã–π —Å–ª–æ–π - –∫–µ—à–∏—Ä—É–µ—Ç—Å—è)
COPY bootstrap/ ./bootstrap/

# –ü–†–û–ë–õ–ï–ú–ù–´–ï –ó–ê–í–ò–°–ò–ú–û–°–¢–ò (–≤ –∫–æ–Ω—Ü–µ - –ø–µ—Ä–µ—Å–æ–±–∏—Ä–∞—é—Ç—Å—è –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏—è—Ö)
RUN pip install --no-cache-dir \
    sqlalchemy==2.0.23 \
    asyncpg==0.29.0 \
    alembic==1.13.1 \
    redis==5.0.1 \
    aioredis==2.0.1 \
    httpx==0.25.2 \
    aiohttp==3.9.1 \
    openai==1.3.7 \
    langchain==0.0.350 \
    chromadb==0.4.18 \
    prometheus-client==0.19.0 \
    opentelemetry-api==1.21.0 \
    opentelemetry-sdk==1.21.0 \
    structlog==23.2.0 \
    python-json-logger==2.0.7 \
    python-jose[cryptography]==3.3.0 \
    passlib[bcrypt]==1.7.4 \
    python-multipart==0.0.6

# –ü—Ä–∞–≤–∞ –¥–æ—Å—Ç—É–ø–∞
RUN chown -R appuser:appuser /app
USER appuser

# Health check —Å –¥–∏–Ω–∞–º–∏—á–µ—Å–∫–∏–º –ø–æ—Ä—Ç–æ–º
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${SERVICE_PORT}/health || exit 1

# –¢–æ—á–∫–∞ –≤—Ö–æ–¥–∞
ENTRYPOINT ["python", "-m", "bootstrap.main"] 