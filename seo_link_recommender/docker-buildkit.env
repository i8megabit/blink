# ========================================
# Docker BuildKit Configuration
# ========================================

# Принудительно включаем BuildKit для всех Docker операций
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Включаем прогрессивный вывод для лучшего мониторинга
# Возможные значения: auto, plain, tty
BUILDKIT_PROGRESS=plain

# Включаем возможности бейкинга для еще большей оптимизации
COMPOSE_BAKE=true

# Максимизируем параллелизм
BUILDKIT_STEP_LOG_MAX_SIZE=10485760
BUILDKIT_STEP_LOG_MAX_SPEED=10485760 