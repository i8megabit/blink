# =============================================================================
# КОНФИГУРАЦИЯ ПРИЛОЖЕНИЯ BLINK
# =============================================================================

# ОКРУЖЕНИЕ
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blink_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================
SECRET_KEY=your_super_secret_key_here_make_it_at_least_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# =============================================================================
# OLLAMA
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT=300
OLLAMA_MAX_TOKENS=2048
OLLAMA_TEMPERATURE=0.7
OLLAMA_KEEP_ALIVE=2h

# =============================================================================
# МОНИТОРИНГ
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
ENABLE_TRACING=true
PROMETHEUS_PORT=9090
JAEGER_HOST=
JAEGER_PORT=6831

# =============================================================================
# КЭШИРОВАНИЕ
# =============================================================================
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000
CACHE_ENABLE_REDIS=true
CACHE_ENABLE_MEMORY=true
CACHE_COMPRESSION_THRESHOLD=1024

# =============================================================================
# API
# =============================================================================
API_TITLE=Blink SEO API
API_VERSION=1.0.0
API_DESCRIPTION=Advanced SEO Analysis Platform
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
CORS_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# ФАЙЛЫ
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=[".txt", ".html", ".xml", ".json"]
TEMP_DIR=/tmp

# =============================================================================
# APPLE SILICON ОПТИМИЗАЦИЯ (для M1/M2/M4)
# =============================================================================
OLLAMA_METAL=1
OLLAMA_FLASH_ATTENTION=1
OLLAMA_KV_CACHE_TYPE=q8_0
OLLAMA_CONTEXT_LENGTH=4096
OLLAMA_BATCH_SIZE=512
OLLAMA_NUM_PARALLEL=2
OLLAMA_MEM_FRACTION=0.9
REQUEST_TIMEOUT=300
KEEP_ALIVE=2h 